header.header
    .container
        .row.align-items-center
            .col-3 
                .inner-logo
                    a(href = "/")
                        img(src = "/images/logo.jpg")
            .col-5 
                .box-search
                    form(
                        action = "/search/result"
                        method = "GET"
                    )
                        div(class = "form-group d-flex mb-0")
                            input(
                                type="text"
                                placeholder="Nhập tên bài hát ..."
                                class= "form-control"
                                name="keyword",
                                value = keyword
                                )
                            button(
                                type = "submit"
                                class = "btn btn-primary"
                            ) Tìm
                    .inner-suggest
                        .inner-list
            .col-4 
                .inner-menu
                    ul 
                        if (user)
                            li 
                                a(href = "/") Trang chủ
                            li 
                                a(href = "/topics") Chủ đề
                            li 
                                a(href = "/favorite-songs") Bài hát yêu thích
                            li 
                                a(href = "/user/info") Thông tin cá nhân
                            li 
                                a(href = "/user/logout") Đăng xuất 
                        else 
                            li 
                                a(href = "/") Trang chủ
                            li 
                                a(href = "/topics") Chủ đề
                            li 
                                a(href = "/user/register") Đăng ký
                            li 
                                a(href = "/user/login") Đăng nhập